<p id="notice"><%= notice %></p>

<h1>Listing Approves</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>User name</th>
      <th>State</th>
      <th>Des</th>
      <th>Episode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @approves.each do |approfe| %>
      <tr>
        <td><%= approfe.user_id %></td>
        <td><%= approfe.user_name %></td>
        <td><%= approfe.state %></td>
        <td><%= approfe.des %></td>
        <td><%= approfe.episode_id %></td>
        <td><%= link_to 'Show', approfe %></td>
        <td><%= link_to 'Edit', edit_approfe_path(approfe) %></td>
        <td><%= link_to 'Destroy', approfe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

