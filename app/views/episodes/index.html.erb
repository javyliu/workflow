<p id="notice"><%= notice %></p>

<h1>Listing Episodes</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Holiday</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Comment</th>
      <th>Approved by</th>
      <th>Approved time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= episode.user_id %></td>
        <td><%= episode.holiday_id %></td>
        <td><%= episode.start_date %></td>
        <td><%= episode.end_date %></td>
        <td><%= episode.comment %></td>
        <td><%= episode.approved_by %></td>
        <td><%= episode.approved_time %></td>
        <td><%= link_to 'Show', episode %></td>
        <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
        <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

