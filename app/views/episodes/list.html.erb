<div id="search" class="panel">
  <form data-remote="true"  action="#" data-replace-with="#content">
    <div class="row">
      <div class="columns medium-2">
        <label>假别:</label>
        <%= connection_select(:episode,:holiday_id,Holiday.all,:name,:id,prompt: "请选择假期类别") %>
      </div>
      <div class="columns medium-3">
        <label>姓名:</label>
        <%= text_field :user,:user_name %>
      </div>
      <div class="columns medium-2">
        <label>部门:</label>
        <%= select :user, :dept_code, current_user.cache_dept.depts,prompt: "选择部门" %>
      </div>
      <div class="columns medium-3">
        <label>邮箱:</label>
        <%= text_field :user,:email %>
      </div>
      <div class="columns medium-2">
        <input type="submit" class="button small inline-button" text="搜索"/>
      </div>
    </div>
  </form>
  <div class="toggle" ref="#toggle_table" style="" title="点击收起"></div>
</div>
<% if @episodes.present? %>


<table>
  <thead>
    <tr>
      <th>名字</th>
      <th>部门</th>
      <th>假别</th>
      <th>开始时间</th>
      <th>结束时间</th>
      <th>申请时长</th>
      <th>事由</th>
      <th>审批结果</th>
      <th></th>
    </tr>
  </thead>

  <tbody id="content">
  <%= render :partial => 'items',object: @episodes %>
  </tbody>
</table>

<% end %>

