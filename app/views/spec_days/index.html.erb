<p id="notice"><%= notice %></p>

<h1>Listing Spec Days</h1>

<table>
  <thead>
    <tr>
      <th>Sdate</th>
      <th>Is workday</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spec_days.each do |spec_day| %>
      <tr>
        <td><%= spec_day.sdate %></td>
        <td><%= spec_day.is_workday %></td>
        <td><%= spec_day.comment %></td>
        <td><%= link_to 'Show', spec_day %></td>
        <td><%= link_to 'Edit', edit_spec_day_path(spec_day) %></td>
        <td><%= link_to 'Destroy', spec_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

