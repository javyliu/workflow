<fieldset>
  <legend><span>部门编辑</span></legend>

<%= form_for(@department) do |f| %>
  <div class="field">
    编号:
    <strong><%= f.object.code %> </strong>
  </div>
  <div class="field">
    名字:
    <strong><%= f.object.name %> </strong>
  </div>
  <div class="field">
    管理者ID:
    <%= f.text_field :mgr_code %>
  </div>
  <div class="field">
    <%= f.label :attend_rule_id,"考勤规则:" %>
    <%= f.collection_select :attend_rule_id,AttendRule.all,:id,:description,prompt: '考勤规则' %>
  </div>


  <div class="actions">
    <%= f.submit "提交",data:{disable_with: '提交中...'},class: 'button medium' %>
  </div>
<% end %>
</fieldset>
