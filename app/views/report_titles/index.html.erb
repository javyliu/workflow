<p id="notice"><%= notice %></p>

<h1>Listing Report Titles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Des</th>
      <th>Ord</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @report_titles.each do |report_title| %>
      <tr>
        <td><%= report_title.name %></td>
        <td><%= report_title.des %></td>
        <td><%= report_title.ord %></td>
        <td><%= link_to 'Show', report_title %></td>
        <td><%= link_to 'Edit', edit_report_title_path(report_title) %></td>
        <td><%= link_to 'Destroy', report_title, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

